<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/usrPhoneNum"
        android:layout_width="115sp"
        android:layout_height="48dp"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/trialNum2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toEndOf="@+id/trialNum2"
        app:layout_constraintTop_toTopOf="@+id/trialNum2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/trialNum2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Phone #:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/sess_ID"
        app:layout_constraintTop_toBottomOf="@+id/trialNum" />

    <EditText
        android:id="@+id/usrTrialNum"
        android:layout_width="115sp"
        android:layout_height="48dp"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/trialNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toEndOf="@+id/trialNum"
        app:layout_constraintTop_toTopOf="@+id/trialNum"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/trialNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Trial:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="@+id/sess_ID"
        app:layout_constraintTop_toBottomOf="@+id/sess_ID" />

    <EditText
        android:id="@+id/usrSessionID"
        android:layout_width="115sp"
        android:layout_height="48dp"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/sess_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toEndOf="@+id/sess_ID"
        app:layout_constraintTop_toTopOf="@+id/sess_ID"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/sess_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Session ID:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spoof_type" />

    <EditText
        android:id="@+id/usrSpoofType"
        android:layout_width="115sp"
        android:layout_height="48dp"
        android:text="null"
        app:layout_constraintBottom_toBottomOf="@+id/spoof_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toEndOf="@+id/spoof_type"
        app:layout_constraintTop_toTopOf="@+id/spoof_type"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/spoof_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Spoof Type:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subId2" />

    <RadioGroup
        android:id="@+id/liveSpoofGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/subId2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subId"
        app:layout_constraintTop_toTopOf="@+id/subId2">

        <RadioButton
            android:id="@+id/live"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:text="Live"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/spoof"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:text="Spoof"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/subId"
            app:layout_constraintTop_toBottomOf="@+id/usrSubId" />

    </RadioGroup>

    <TextView
        android:id="@+id/subId2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Live/Spoof:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subId" />

    <TextView
        android:id="@+id/subId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="R/L Hand:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubId" />

    <EditText
        android:id="@+id/usrSubId"
        android:layout_width="115sp"
        android:layout_height="48dp"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/SubId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toEndOf="@+id/SubId"
        app:layout_constraintTop_toTopOf="@+id/SubId"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/SubId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Sub ID:"
        android:textAllCaps="false"
        android:textSize="35sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/leftRightGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/subId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/subId"
        app:layout_constraintTop_toBottomOf="@+id/usrSubId">

        <RadioButton
            android:id="@+id/leftButton"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:text="Left"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <RadioButton
            android:id="@+id/rightButton"
            android:layout_width="81dp"
            android:layout_height="wrap_content"
            android:minHeight="55dp"
            android:text="Right"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/subId"
            app:layout_constraintTop_toBottomOf="@+id/usrSubId" />

    </RadioGroup>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="275dp"
        android:layout_height="121dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usrSessionID"
        app:layout_constraintVertical_bias="0.724" />
</android.support.constraint.ConstraintLayout>